#!/usr/bin/env php
<?php

require getcwd() . '/vendor/autoload.php';

use Zerotoprod\DataModelGenerator\Engine;
use Zerotoprod\DataModelGenerator\Models\Config;

if (in_array('init', $argv, true)) {
    $sourceFile = __DIR__.'/data-model.json';
    $destinationFile = './data-model.json';

    if (!file_exists($destinationFile)) {
        if (file_exists($sourceFile)) {
            if (copy($sourceFile, $destinationFile)) {
                echo "File 'data-model.json' copied\n";
            } else {
                echo "Failed to copy 'data-model.json'.\n";
            }
        } else {
            echo "'data-model.json' does not exist.\n";
        }
    } else {
        echo "'data-model.json' already exists. No action taken.\n";
    }
}

if (isset($argv[1]) && $argv[1] === 'generate' && isset($argv[2])) {
    $content = @file_get_contents($argv[2]);

    if ($content === false) {
        echo "Failed to download the file from the path specified: $argv[2].\n";

        return 0;
    }
    $Components = null;
    $schema = json_decode($content, true);
    if (isset($schema['openapi']) && str_starts_with($schema['openapi'], '3.0.')) {
        if (!class_exists(\Zerotoprod\DataModelAdapterOpenapi30\OpenApi30::class)) {
            echo "OpenAPI 3.0 adapter not installed. Run: composer require zero-to-prod/data-model-adapter-openapi30\n";

            return 1;
        }
        $Components = \Zerotoprod\DataModelAdapterOpenapi30\OpenApi30::adapt($schema);
    }
    if (isset($schema['swagger']) && $schema['swagger'] === '2.0') {
        if (!class_exists(\Zerotoprod\DataModelAdapterSwagger\Swagger::class)) {
            echo "Swagger 2.0 adapter not installed. Run: composer require zero-to-prod/data-model-adapter-swagger\n";

            return 1;
        }
        $Components = \Zerotoprod\DataModelAdapterSwagger\Swagger::adapt($schema);
    }
    if (!$Components) {
        throw new RuntimeException('Unsupported Schema');
    }

    Engine::generate(
        $Components,
        Config::from(json_decode(file_get_contents('data-model.json'), true))
    );

    return 0;
}
