{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "type": "object",
  "properties": {
    "directory": {
      "type": "string",
      "description": "The directory DataModels will be saved to",
      "default": "."
    },
    "namespace": {
      "type": "string",
      "description": "The Fully Qualified Namespace for the DataModels",
      "nullable": true
    },
    "comments": {
      "type": "boolean",
      "description": "Controls the visibility of comments",
      "default": true
    },
    "model": {
      "type": "object",
      "description": "Config for a model",
      "properties": {
        "use_statements": {
          "type": "array",
          "description": "The use statements for the model."
        },
        "readonly": {
          "type": "boolean",
          "description": "Adds the `readonly` modifier to the DataModel.",
          "default": true
        },
        "constants": {
          "type": "object",
          "description": "Contains nested properties",
          "properties": {
            "type": {
              "type": "boolean",
              "description": "Include the constant type",
              "default": true
            },
            "comments": {
              "type": "boolean",
              "description": "Controls the visibility of comments",
              "default": true
            },
            "visibility": {
              "type": "string",
              "enum": [
                "public",
                "protected",
                "private"
              ],
              "default": "public",
              "description": "Visibility of the property"
            }
          }
        }
      }
    },
    "properties": {
      "type": "object",
      "description": "Properties for the model.",
      "properties": {
        "types": {
          "type": "object",
          "description": "A map of types and the resulting type",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "The type of the property"
              }
            },
            "required": [
              "type"
            ]
          }
        },
        "comments": {
          "type": "boolean",
          "description": "Controls the visibility of comments",
          "default": false
        },
        "readonly": {
          "type": "boolean",
          "description": "Adds the `readonly` modifier",
          "default": true
        },
        "visibility": {
          "type": "string",
          "enum": [
            "public",
            "protected",
            "private"
          ],
          "default": "public",
          "description": "Visibility of the property: public, protected, private."
        }
      }
    }
  }
}