{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "type": "object",
  "properties": {
    "directory": {
      "type": "string",
      "description": "The directory DataModels will be saved to",
      "default": "."
    },
    "namespace": {
      "type": "string",
      "description": "The Fully Qualified Namespace for the DataModels",
      "nullable": true
    },
    "readonly": {
      "type": "boolean",
      "description": "Adds the `readonly` modifier",
      "default": true
    },
    "properties": {
      "type": "object",
      "description": "Contains nested properties",
      "properties": {
        "types": {
          "type": "array",
          "description": "A map of types and the resulting type",
          "items": {
            "type": "object",
            "properties": {
              "format": {
                "type": "string",
                "enum": [
                  "number",
                  "float",
                  "double",
                  "integer",
                  "int32",
                  "int64",
                  "date",
                  "date-time",
                  "password",
                  "byte",
                  "binary"
                ],
                "description": "Defines the format of the property"
              },
              "type": {
                "type": "string",
                "description": "The type of the property"
              }
            },
            "required": [
              "format",
              "type"
            ]
          }
        }
      },
      "required": ["types"]
    }
  },
  "required": ["namespace"]
}