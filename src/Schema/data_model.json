{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Config",
  "type": "object",
  "properties": {
    "directory": {
      "type": "string",
      "description": "The directory DataModels will be saved to",
      "default": "."
    },
    "namespace": {
      "type": "string",
      "description": "The Fully Qualified Namespace for the DataModels",
      "nullable": true
    },
    "readonly": {
      "type": "boolean",
      "description": "Adds the `readonly` modifier",
      "default": true
    },
    "exclude_constants": {
      "type": "boolean",
      "description": "Excludes constants",
      "default": false
    },
    "properties": {
      "type": "object",
      "description": "Contains nested properties",
      "properties": {
        "types": {
          "type": "object",
          "description": "A map of types and the resulting type",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "description": "The type of the property"
              }
            },
            "required": [
              "type"
            ]
          }
        },
        "exclude_comments": {
          "type": "boolean",
          "description": "Controls the visibility of comments",
          "default": false
        },
        "readonly": {
          "type": "boolean",
          "description": "Adds the `readonly` modifier",
          "default": true
        },
        "visibility": {
          "type": "string",
          "enum": [
            "public",
            "protected",
            "private"
          ],
          "description": "Visibility of the property"
        }
      }
    },
    "constants": {
      "type": "object",
      "description": "Contains nested properties",
      "properties": {
        "exclude_type": {
          "type": "boolean",
          "description": "Excludes the constant type"
        },
        "exclude_comments": {
          "type": "boolean",
          "description": "Controls the visibility of comments",
          "default": false
        },
        "visibility": {
          "type": "string",
          "enum": [
            "public",
            "protected",
            "private"
          ],
          "description": "Visibility of the property"
        }
      }
    }
  }
}