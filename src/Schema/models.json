{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "Models": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "namespace": {
            "type": "string",
            "description": "Namespace of the PHP class"
          },
          "readonly": {
            "type": "boolean",
            "description": "Adds the `readonly` modifier to the class"
          },
          "File": {
            "type": "object",
            "properties": {
              "directory": {
                "type": "string",
                "description": "Directory path of the file. Default is '.'"
              },
              "name": {
                "type": "string",
                "description": "The name of the file including any extension/s"
              }
            },
            "required": [
              "name"
            ]
          },
          "imports": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of imported namespaces"
          },
          "use_statements": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of use statements"
          },
          "constants": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "comment": {
                  "type": "string",
                  "description": "Comment for the constant"
                },
                "visibility": {
                  "type": "string",
                  "enum": [
                    "public",
                    "protected",
                    "private"
                  ],
                  "description": "Visibility of the constant"
                },
                "type": {
                  "type": "string",
                  "description": "Data type of the constant"
                },
                "name": {
                  "type": "string",
                  "description": "Name of the constant"
                },
                "value": {
                  "type": "string",
                  "description": "Value of the constant"
                }
              },
              "required": [
                "comment",
                "visibility",
                "type",
                "name",
                "value"
              ]
            }
          },
          "properties": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "comment": {
                  "type": "string",
                  "description": "Comment for the property"
                },
                "visibility": {
                  "type": "string",
                  "enum": [
                    "public",
                    "protected",
                    "private"
                  ],
                  "description": "Visibility of the property"
                },
                "type": {
                  "type": "string",
                  "description": "Data type of the property"
                },
                "name": {
                  "type": "string",
                  "description": "Name of the property"
                },
                "attributes": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  },
                  "description": "List of attributes for the property"
                },
                "format": {
                  "type": "string",
                  "enum": [
                    "number",
                    "float",
                    "double",
                    "integer",
                    "int32",
                    "int64",
                    "date",
                    "date-time",
                    "password",
                    "byte",
                    "binary"
                  ],
                  "description": "Visibility of the property"
                }
              },
              "required": [
                "visibility",
                "format",
                "name"
              ]
            }
          }
        },
        "required": [
          "File"
        ]
      }
    }
  },
  "required": [
    "Models"
  ]
}